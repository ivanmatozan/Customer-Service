{% extends 'templates/app.twig' %}

{% block title %}Login{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Login</h3>
                </div>
                <div class="panel-body">

                    <form action="{{ path_for('auth.login') }}" method="post" class="form">

                        <div class="form-group {{ validationErrors.email ? 'has-error' : '' }}">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control" value="{{ oldData.email }}">
                            {% if validationErrors.email %}
                                <span class="help-block">{{ validationErrors.email | first}}</span>
                            {% endif%}
                        </div>

                        <div class="form-group {{ validationErrors.password ? 'has-error' : '' }}">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" class="form-control">
                            {% if validationErrors.password %}
                                <span class="help-block">{{ validationErrors.password | first}}</span>
                            {% endif%}
                        </div>

                        <button type="submit" class="btn btn-default">Login</button>

                    </form>

                </div>
            </div>
        </div>
    </div>

{% endblock %}