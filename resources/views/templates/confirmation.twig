{% extends 'templates/app.twig' %}

{% block title %}Delete confirmation{% endblock %}

{% block content %}

    <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{ message }}</h3>
            </div>
            <div class="panel-body">

                <form action="{{ path_for(routeName, {id: id}) }}" method="post" class="form">
                    <input type="submit" name="yes" value="Yes" class="btn btn-success">
                    <input type="submit" name="no" value="No" class="btn btn-danger">
                </form>

            </div>
        </div>
    </div>

{% endblock %}