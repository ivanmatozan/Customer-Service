{% extends 'templates/app.twig' %}

{% block title %}User Management{% endblock %}

{% block content %}

    <div class="row">
        <div class="page-header">
            <h2>User Management</h2>
        </div>
    </div>

    <div class="row top-button-row">
        <div class="col-xs-12">
            <a href="{{ path_for('user-management.create') }}" class="btn btn-primary pull-right">Create user</a>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                <table class="table table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Created at</th>
                            <th>Updated at</th>
                            <th colspan="2">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ user.name }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.role.name }}</td>
                                <td>{{ user.created_at }}</td>
                                <td>{{ user.updated_at }}</td>
                                <td><a href="{{ path_for('user-management.edit', {id: user.id}) }}">Edit</a></td>
                                <td><a href="{{ path_for('user-management.delete', {id: user.id}) }}">Delete</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>

{% endblock %}